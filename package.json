{
  "name": "library-app",
  "version": "1.0.0",
  "description": "A library CRUD application",
  "main": "app.js",
  "scripts": {
    "dev": "SET NODE_ENV=DEVELOPMENT && nodemon ./backend/server.js",
    "prod": "node ./backend/server.js",
    "build": "npm i",
    "install-client": "cd frontend && npm i",
    "heroku-postbuild": "npm run build && npm run install-client",
    "server": "npm run prod",
    "develop": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix frontend\"",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix frontend\""
  },
  "author": "Fiyin",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "cloudinary": "^1.28.1",
    "concurrently": "^7.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-fileupload": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.5",
    "nodemailer": "^6.7.2",
    "react-helmet": "^6.1.0",
    "react-paginate": "^8.1.0",
    "validator": "^13.7.0"
  }
}
